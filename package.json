{
  "name": "manuscript-upload-api",
  "version": "1.0.0",
  "type": "module",
  "description": "Cloudflare Worker for manuscript upload and management",
  "main": "worker.js",
  "scripts": {
    "deploy": "wrangler deploy",
    "dev": "wrangler dev",
    "dev:frontend": "vite",
    "build:frontend": "vite build",
    "preview:frontend": "vite preview",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .js --ignore-pattern frontend/ --ignore-pattern node_modules/",
    "lint:fix": "eslint . --ext .js --ignore-pattern frontend/ --ignore-pattern node_modules/ --fix"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.10.0",
    "@rollup/rollup-win32-x64-msvc": "^4.52.5",
    "@types/node": "^24.9.1",
    "@vitejs/plugin-legacy": "^7.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.38.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vite-plugin-static-copy": "^3.1.4",
    "vitest": "^3.2.4",
    "wrangler": "^4.42.2"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.68.0",
    "@sentry/browser": "^10.22.0",
    "@sentry/node": "^10.22.0",
    "dotenv": "^17.2.3",
    "fflate": "^0.8.2",
    "formdata-node": "^6.0.3",
    "hono": "^4.10.3",
    "itty-router": "^5.0.22",
    "jose": "^6.1.0",
    "mammoth": "^1.11.0",
    "openai": "^6.7.0",
    "pdf-lib": "^1.17.1",
    "stripe": "^19.1.0"
  }
}
