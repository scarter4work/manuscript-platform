{
  "env": {
    "es2022": true,
    "node": true,
    "worker": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "semi": ["error", "always"],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "no-var": "error",
    "prefer-const": "error",
    "no-trailing-spaces": "error",
    "eol-last": ["error", "always"]
  },
  "globals": {
    "crypto": "readonly",
    "Response": "readonly",
    "Request": "readonly",
    "Headers": "readonly",
    "FormData": "readonly",
    "URL": "readonly",
    "URLSearchParams": "readonly",
    "TextEncoder": "readonly",
    "TextDecoder": "readonly",
    "ReadableStream": "readonly",
    "WritableStream": "readonly",
    "TransformStream": "readonly"
  },
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    ".wrangler/",
    "frontend/"
  ]
}
